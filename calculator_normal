#include <stdio.h>
#include <math.h>

char t = 'O';

double get_total(double a, double b, char c) {
    double total;
    switch (c) {
        case '+' : total = a + b; break;
        case '-' : total = a - b; break;
        case '*' : total = a * b; break;
        case '^' : total = pow(a, b); break;
        case '/' :
            if ( b == 0 ) {
                fprintf(stderr, "Делить на ноль нельзя!\n"); break;
            } else {
                total = a / b;
                break;
            }
        case '%' : t = 'E'; break;
        default:
            fprintf(stderr, "Неизвестный оператор '%c'.\n", c);
            if (total != 0)
                total = a;
            return 0;
    }
    return total;
}

int main() {
    int c;
    double v1, v2, total;
    char s;

    while (1) {
        t = 'O';

        printf("############\nКАЛЬКУЛЯТОР\n############\n\n ФУНКЦИИ: СЛОЖЕНИЕ (+), ВЫЧИТАНИЕ (-), УМНОЖЕНИЕ (*), ДЕЛЕНИЕ (/), ВОЗВЕДЕНИЕ В СТЕПЕНЬ (^)\n--------------------------------\n\n");
        printf("Укажите режим работы, где 1 - классический, \n2 - с запоминаем результата прошлого примера: ");
        scanf("%d", &c);
        if (c == 0) break;

        printf("> ");
        scanf("%lf %c %lf", &v1, &s, &v2);

        total = get_total(v1, v2, s);
        printf("Ответ = %.6lf\n", total);

        if (c == 1) {
            while (t != 'E') {
                printf("> ");
                scanf("%lf %c %lf", &v1, &s, &v2);
                if (t == 'E')
                    continue;
                printf("Ответ = %.6lf\n", get_total(v1, v2, s));
            }
        } else if (c == 2) {
            while (t != 'E') {
                printf("Ответ: ");
                scanf(" %c %lf", &s, &v2);
                if (t == 'E')
                    continue;


                total = get_total(total, v2, s);
                printf("Ответ = %.6lf\n", total);
            }
        }
    }

    return 0;
}

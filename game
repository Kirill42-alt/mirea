#include <stdio.h>
#include <string.h>

int main() {
    char word[19];
    int player;

    printf("Придумайте слово:\n> ");
    scanf("%s", word);
    printf("\e[1;1H\e[2J");
    printf("Загаданное cлово было скрыто!\n");
    printf("Количество игроков:\n> ");
    scanf("%d", &player);
    
    if (player != 0) {

        printf("\e[1;1H\e[2J");
        printf("Слово:\n\n");

        int len = strlen(word);
        //printf("%d\n", l1);
        
        for (int i=0; i<len; i++) {
            printf("%s", "* ");
        }
        
        printf("\n-----------------\n\n");
        
        int victory = 0;
        char *letter;
        
        while(victory != len) {
            for (int q=1; q<player+1; q++) {
                printf("Игрок %d: ", q);
                scanf("%s", letter);
                
                if (strlen(letter) < 1) {
                    
                } else {
                    printf("Вводить можно только одну букву!\n\n");
                    printf("Игрок %d: ", q);
                    scanf("%s", letter);
                }
                
            }
        }
        
    } else {
        printf("Игроки не обнаружены.");
    }
}

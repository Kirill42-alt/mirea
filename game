#include <stdio.h>

int main() {
    char word;
    int player;

    printf("Придумайте слово:\n> ");
    scanf("%s", &word);
    printf("\e[1;1H\e[2J");
    printf("Загаданное cлово было скрыто!\n");
    printf("Количество игроков:\n> ");
    scanf("%d", &player);
    
    if (player != 0) {
        char *arr_private[5] = {"с", "л", "о", "в", "о"};
        char *arr_public[5] = {"*", "*", "*", "*", "*"};
        
        printf("\e[1;1H\e[2J");
        printf("Слово:\n");
        int str = ("%d\n", (int)(sizeof(arr_private) / sizeof(arr_private[0])));
        
        for (int i = 0; i < 5; i++) {
            printf("%s ", arr_public[i]);
        }
        
        while (1) {
            for (int k = 1; k < player; k++) {
                printf("%d ", k);
            }
        }
        
    } else {
        printf("Ошибка. Игроки не обнаружены.");
    }
}

#include <stdio.h>
#include <string.h>
#include <windows.h>
#include <math.h>


int main()
{
    int len, counter = 0;
    char str[] = "Postavte zachot, ili ya za sebya ne rychays!";
    len = strlen(str);

    while (TRUE)
    {
        for (int i=counter; i<len; i++)
            printf("%c", str[i]);
        printf(" ");

        for (int i=0; i<counter; i++)
            printf("%c", str[i]);
        counter += 1;
        
        if (counter == len) 
        counter = 0;
        
        _sleep(100);
        system("cls");
    }
    return 0;
}

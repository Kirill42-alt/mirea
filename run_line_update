#include <stdio.h>
#include <string.h>
#include <windows.h>
#include <math.h>


int main() {
    int len, count = 0;
    char word;
    
    scanf("%s", &word);
    char str[] = {word};
    len = strlen(str);

    while (1) {
        for (int i=count; i<len; i++)
            printf("%c", str[i]);
        printf(" ");

        for (int i=0; i<count; i++)
            printf("%c", str[i]);
        count += 1;
        
        if (count == len) 
        count = 0;
        
        _sleep(100);
        system("cls");
    }
    return 0;
}

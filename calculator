#include <stdio.h>
#include <math.h>

char t = 'O';


double get_total(double a, double b, char c) 
{
    double total;
    switch (c) 
    {
        case '+' : total = a + b;
            break;
        case '-' : total = a - b;
            break;
        case '*' : total = a * b;
            break;
        case '^' : total = pow(a, b);
            break;
        case '/' :
            if ( b == 0 ) 
            {
                fprintf(stderr, "Error! Division by zero.\n");
                total = a;
            }
            else
                total = a / b;
            break;
        case '%' : t = 'E';
            break;

        default :
            fprintf(stderr, "Error! Unknown Operator: '%c'.\n", c);
            if (total != 0)
                total = a;
            break;
    }
    return total;
}


int main() 
{
    int c;
    double v1, v2, total;
    char s, j[1000];

    FILE *direction;
    direction = fopen("direction.txt", "r");
    while (!feof(direction)) 
    {
        if (fgets(j, 1000, direction) != NULL)
            printf("%s", j);
    }
    fclose(direction);

    while (1) 
    {
        t = 'O';

        printf("Select calculator mode: ");
        scanf("%d", &c);
        if (c == 0)
            break;

        printf("> ");
        scanf("%lf %c %lf", &v1, &s, &v2);

        total = get_total(v1, v2, s);
        printf("Ans = %.6lf\n", total);

        if (c == 1) 
        {
            while (t != 'E') 
            {
                printf("> ");
                scanf("%lf %c %lf", &v1, &s, &v2);
                if (t == 'E')
                    continue;
                printf("Ans = %.6lf\n", get_total(v1, v2, s));
            }
        }

        else if (c == 2) 
        {
            while (t != 'E') 
            {
                printf("Ans ");
                scanf(" %c %lf", &s, &v2);
                if (t == 'E')
                    continue;

                total = get_total(total, v2, s);
                printf("Ans = %.6lf\n", total);
            }
        }
    }

    return 0;
}
